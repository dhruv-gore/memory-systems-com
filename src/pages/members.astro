---
import Layout from '../layouts/Layout.astro';

const members = [
	{
		name: "Dr. Elena Rostova",
		role: "Principal Investigator",
		specialty: "Computational Neuroscience",
		image: "https://ui-avatars.com/api/?name=Elena+Rostova&background=fca5a5&color=7f1d1d"
	},
	{
		name: "James Chen",
		role: "PhD Candidate",
		specialty: "Reinforcement Learning",
		image: "https://ui-avatars.com/api/?name=James+Chen&background=e7e5e4&color=292524"
	},
	{
		name: "Sarah Miller",
		role: "Research Engineer",
		specialty: "Systems Architecture",
		image: "https://ui-avatars.com/api/?name=Sarah+Miller&background=e7e5e4&color=292524"
	}
];
---

<Layout title="Members">
	<div class="pt-10 md:pt-20 max-w-6xl mx-auto">
		<header class="mb-20 opacity-0 animate-fade-in-up">
			<h1 class="text-6xl md:text-8xl font-serif italic text-stone-900 mb-8 tracking-tight">
				The Collective
			</h1>
		</header>

		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-20 opacity-0 animate-fade-in-up [animation-delay:200ms]">
			{members.map((member) => (
				<div class="group relative">
					<div class="aspect-[4/5] bg-stone-100 mb-6 overflow-hidden relative">
						<img 
							src={member.image} 
							alt={member.name} 
							class="w-full h-full object-cover filter grayscale contrast-125 group-hover:grayscale-0 group-hover:contrast-100 transition-all duration-700 ease-in-out mix-blend-multiply"
						/>
						<div class="absolute inset-0 bg-red-900/0 group-hover:bg-red-900/5 transition-colors duration-500"></div>
					</div>
					
					<h3 class="text-2xl font-serif text-stone-900 border-b border-transparent group-hover:border-red-600 inline-block transition-all duration-300">
						{member.name}
					</h3>
					
					<div class="flex justify-between items-end mt-2">
						<span class="font-mono text-xs uppercase tracking-widest text-red-700">
							{member.role}
						</span>
						<span class="text-sm text-stone-400 font-light italic">
							{member.specialty}
						</span>
					</div>
				</div>
			))}
		</div>
	</div>
</Layout>