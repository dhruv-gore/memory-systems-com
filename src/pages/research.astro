---
import Layout from '../layouts/Layout.astro';

const projects = [
	{
		year: "2024",
		title: "Neural Encoding of Episodic Memory",
		description: "High-density probe mapping of hippocampal formation during rapid eye movement sleep.",
		category: "Neuroscience"
	},
	{
		year: "2023",
		title: "Differentiable Neural Computer v2",
		description: "Stabilizing read-write heads in memory-augmented networks for long-context reasoning tasks.",
		category: "Artificial Intelligence"
	},
	{
		year: "2023",
		title: "The Entropy of Forgetting",
		description: "A theoretical framework quantifying information loss in social networks over decadal timescales.",
		category: "Sociology"
	}
];
---

<Layout title="Research">
	<div class="pt-10 md:pt-20 max-w-5xl mx-auto">
		<h1 class="text-6xl md:text-8xl font-serif italic text-stone-900 mb-20 tracking-tight opacity-0 animate-fade-in-up">
			Selected Works
		</h1>

		<div class="space-y-0 opacity-0 animate-fade-in-up [animation-delay:300ms]">
			<!-- Header Row -->
			<div class="hidden md:grid grid-cols-12 gap-4 pb-4 border-b border-stone-200 text-xs font-mono uppercase tracking-widest text-stone-400">
				<div class="col-span-1">Year</div>
				<div class="col-span-4">Project</div>
				<div class="col-span-5">Abstract</div>
				<div class="col-span-2 text-right">Field</div>
			</div>

			{projects.map((project) => (
				<div class="group grid md:grid-cols-12 gap-4 py-8 border-b border-stone-100 hover:bg-stone-50 transition-colors duration-500 items-baseline">
					<div class="col-span-1 font-mono text-sm text-red-600 md:text-stone-400 group-hover:text-red-600 transition-colors">
						{project.year}
					</div>
					<div class="col-span-4 mb-2 md:mb-0">
						<h3 class="text-2xl font-serif text-stone-900 group-hover:text-red-700 transition-colors">
							{project.title}
						</h3>
					</div>
					<div class="col-span-5 text-stone-500 font-light leading-relaxed mb-4 md:mb-0">
						{project.description}
					</div>
					<div class="col-span-2 md:text-right">
						<span class="inline-block px-2 py-1 border border-stone-200 rounded-full text-xs font-medium text-stone-500 group-hover:border-red-200 group-hover:text-red-600 transition-colors">
							{project.category}
						</span>
					</div>
				</div>
			))}
		</div>
	</div>
</Layout>