---
import Layout from '../layouts/Layout.astro';

const projects = [
	{
		title: "Neural Encoding of Episodic Memory",
		description: "Using high-density probes to map the formation of episodic memories in the hippocampus.",
		status: "Ongoing",
		tags: ["Neuroscience", "Biology"]
	},
	{
		title: "Differentiable Neural Computer v2",
		description: "Improving the stability and capacity of memory-augmented neural networks for complex reasoning tasks.",
		status: "Published",
		tags: ["AI", "Machine Learning"]
	},
	{
		title: "Digital Archiving Protocols",
		description: "A framework for long-term data preservation inspired by DNA storage mechanisms.",
		status: "In Review",
		tags: ["Systems", "Storage"]
	}
];
---

<Layout title="Research">
	<div class="max-w-4xl mx-auto">
		<h1 class="text-4xl font-bold mb-2">Research</h1>
		<p class="text-xl text-gray-500 mb-12">Our current investigations and published works.</p>

		<div class="grid gap-8">
			{projects.map((project) => (
				<div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition flex flex-col md:flex-row gap-6">
					<div class="flex-grow">
						<div class="flex items-center gap-3 mb-2">
							<span class={`px-2 py-1 text-xs font-semibold rounded-full ${
								project.status === 'Published' ? 'bg-green-100 text-green-700' :
								project.status === 'Ongoing' ? 'bg-blue-100 text-blue-700' :
								'bg-yellow-100 text-yellow-700'
							}`}>
								{project.status}
							</span>
							<div class="flex gap-2">
								{project.tags.map(tag => (
									<span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">#{tag}</span>
								))}
							</div>
						</div>
						<h2 class="text-2xl font-bold text-gray-900 mb-3">{project.title}</h2>
						<p class="text-gray-600 leading-relaxed">{project.description}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</Layout>
