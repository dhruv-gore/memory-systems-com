---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Memory Systems Group - Exploring the frontiers of memory research." } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Memory Systems Group</title>
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans min-h-screen flex flex-col">
		<header class="bg-white shadow-sm sticky top-0 z-50">
			<nav class="container mx-auto px-4 py-4 flex justify-between items-center">
				<a href="/" class="text-2xl font-bold text-indigo-600 hover:text-indigo-800 transition">
					Memory Systems
				</a>
				
				<!-- Mobile Menu Button (Hidden on Desktop) -->
				<button id="mobile-menu-btn" class="md:hidden text-gray-600 hover:text-indigo-600 focus:outline-none">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>

				<!-- Desktop Menu -->
				<ul class="hidden md:flex space-x-8">
					<li><a href="/" class="font-medium hover:text-indigo-600 transition">Home</a></li>
					<li><a href="/about" class="font-medium hover:text-indigo-600 transition">About</a></li>
					<li><a href="/research" class="font-medium hover:text-indigo-600 transition">Research</a></li>
					<li><a href="/members" class="font-medium hover:text-indigo-600 transition">Members</a></li>
					<li><a href="/join" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition">Join Us</a></li>
				</ul>
			</nav>

			<!-- Mobile Menu (Hidden by default) -->
			<div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100">
				<ul class="flex flex-col p-4 space-y-4">
					<li><a href="/" class="block font-medium hover:text-indigo-600 transition">Home</a></li>
					<li><a href="/about" class="block font-medium hover:text-indigo-600 transition">About</a></li>
					<li><a href="/research" class="block font-medium hover:text-indigo-600 transition">Research</a></li>
					<li><a href="/members" class="block font-medium hover:text-indigo-600 transition">Members</a></li>
					<li><a href="/join" class="block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 text-center transition">Join Us</a></li>
				</ul>
			</div>
		</header>

		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>

		<footer class="bg-gray-800 text-gray-300 py-8 mt-auto">
			<div class="container mx-auto px-4 grid md:grid-cols-3 gap-8">
				<div>
					<h3 class="text-xl font-bold text-white mb-4">Memory Systems Group</h3>
					<p class="text-sm">Advancing the understanding of memory in biological and artificial systems.</p>
				</div>
				<div>
					<h4 class="font-bold text-white mb-4">Quick Links</h4>
					<ul class="space-y-2 text-sm">
						<li><a href="/about" class="hover:text-white transition">About</a></li>
						<li><a href="/research" class="hover:text-white transition">Research</a></li>
						<li><a href="/members" class="hover:text-white transition">Members</a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-bold text-white mb-4">Contact</h4>
					<p class="text-sm">Email: contact@memory-systems.com</p>
					<div class="mt-4">
						<a href="/join" class="text-sm underline hover:text-white">Interested in joining?</a>
					</div>
				</div>
			</div>
			<div class="container mx-auto px-4 mt-8 pt-4 border-t border-gray-700 text-center text-xs">
				&copy; {new Date().getFullYear()} Memory Systems Group. All rights reserved.
			</div>
		</footer>

		<script>
			const btn = document.getElementById('mobile-menu-btn');
			const menu = document.getElementById('mobile-menu');

			btn?.addEventListener('click', () => {
				menu?.classList.toggle('hidden');
			});
		</script>
	</body>
</html>
